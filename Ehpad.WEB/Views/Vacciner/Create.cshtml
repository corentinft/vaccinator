@model Ehpad.ORM.Vacciner

@{
    ViewData["Title"] = "Input";
}

<h1>Input</h1>

<h4>Injections</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="RecallDate" class="control-label"></label>
                <input asp-for="RecallDate" class="form-control" />
                <span asp-validation-for="RecallDate" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="BatchNumber" class="control-label"></label>
                <input asp-for="BatchNumber" class="form-control" />
                <span asp-validation-for="BatchNumber" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="PersonId" class="control-label"></label>
                <select asp-for="PersonId" class ="form-control" asp-items="ViewBag.PersonId"></select>
            </div>
            
            <div class="form-group">
                <label asp-for="VaccineId" class="control-label"></label>
                <select asp-for="VaccineId" class ="form-control" asp-items="ViewBag.VaccineId"></select>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Validate" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
